{{#each posts as |post|}}
<div class="card mb-6">
  <header class="card-header card-header-title has-background-grey-lighter">
    
        <div class="column">
            <p class=" has-text-primary-light"></p>
      <a href="/post/{{post.id}}"  class="has-text-black is-capitalized is-pulled-left">{{post.title}} </a></p>
      </div>

      <div class="column">
      <span class=""> </span>
      </div>
    
  </header>

    <div class="card-content">
        <div class="content has-text-justified">
            {{post.post_text}}
        </div>
            <div class="is-pulled-right">
                <b>{{user.name}}</b> | 
                 | {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        
    </div>
</div>
{{/each}}
<div class='card'>
  <h2 class='card-header'>Create New Post</h2>
  <form class='card-body' id='new-post-form'>
    <input type='hidden' name='post-id' value='{{post.id}}' />
    <div>
      <label class='form-label'>Title:</label>
      <input class='form-input' type='text' name='post-title' />
    </div>
    <div>
      <label class='form-label'>Content:</label>
      <textarea
        class='form-textarea form-input'
        name='content'
        data-number='8'
      ></textarea>
    </div>

    <button class='btn btn-primary'>CREATE</button>
  </form>
</div>
<script src='/js/addpost.js'></script>