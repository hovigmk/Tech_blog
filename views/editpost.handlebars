{{#if logged_in}}
<div>
  <h2>
    Edit Post
  </h2>
  <form class='edit-post-form'>
    <div>
      <input name='post-title' type='text' value='{{post.title}}' />
    </div>
    <div>
      Posted by you on
      {{format_date post.created_at}}
      
      {{post.comments.length}}
      {{format_plural 'comment' post.comments.length}}
    </div>
    <div>
      <label for='post_text'>Post</label>
      <textarea id='post_text' name='post_text'>{{post.post_text}}</textarea>
    </div>
    <button type='submit'>Save Changes</button>
    <button type='button' class='delete-post-btn'>Delete Post</button>
  </form>
</div>

<script src='/js/editpost.js'></script>
<script src='/js/deletepost.js'></script>